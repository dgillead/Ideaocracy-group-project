<form action="/suggestions" method="post">
  <div class="form-group">
    <label for="Textarea">Have a good suggestion?</label>
    <textarea class="form-control" id="Textarea" rows="3" name="body" required></textarea>
    <input type="hidden" name="idea_id" value="<%= idea.id %>">
    <%= button_to 'Post your suggestion',new_suggestion_path, class:"btn btn-primary btn-margin" %>
  </div>
</form>
